<% layout('layouts/boilerplate') %>

<div class="container mt-3">
  <h1 class="mb-4 text-center">Add New Campground</h1>

  <form class="needs-validation" action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="campground[title]" placeholder="e.g., Yosemite Camp" required>
        <div id="titleFeedback" class="invalid-feedback">
          *Required
        </div>
      </div>
      <div class="col-md-6">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="campground[location]" placeholder="e.g., California, USA" required>
        <div id="locationFeedback" class="invalid-feedback">
          *Required
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" name="campground[description]" rows="2" placeholder="Describe your campground..." required></textarea>
      <div id="description" class="invalid-feedback">
        *Required
      </div>
    </div>

    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <div class="input-group">
        <span class="input-group-text">$</span>
        <input type="number" class="form-control" id="price" name="campground[price]" min="0" step="0.01" placeholder="Amount" required>
        <span class="input-group-text">.00</span>
        <div id="priceFeedback" class="invalid-feedback">
          *Required and must be greater than 0
        </div>
      </div>
    </div>

    <div class="mb-4">
      <!-- <label for="image" class="form-label">Image URL</label>
      <input type="url" class="form-control" id="image" name="campground[image]" placeholder="https://example.com/image.jpg" required> -->
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" id="image" name="image" class="form-control" multiple required>
      <div id="imageFeedback" class="invalid-feedback">
          *Required
      </div>
    </div>

    <div class="d-grid">
      <button type="submit" class="btn btn-primary btn-lg">Add Campground</button>
    </div>

  </form>

  <div class="text-center mt-4">
    <a href="/campgrounds" class="btn btn-outline-secondary">Back to All Campgrounds</a>
  </div>
</div>
