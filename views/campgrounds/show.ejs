<% layout('layouts/boilerplate') %>

<div class="container mt-5">
    <div class="row">
    <div class="col-md-6">
      <div class="card shadow rounded mb-5">
        <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %> image">
        
        <div class="card-body">
          <h3 class="card-title"><%= campground.title %></h3>
          <p class="card-text text-muted"><%= campground.description %></p>
        </div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Location:</strong> <%= campground.location %></li>
          <li class="list-group-item"><strong>submitted by</strong> <%= campground.author.username %></li>
          <li class="list-group-item"><strong>Price:</strong> $<%= campground.price%></li>
        </ul>

        <% if(currentUser && campground.author.equals(currentUser)){%>
        <div class="card-body d-flex justify-content-between align-items-center">
          <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
          </a>
          
          <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this campground?')">
            <button class="btn btn-sm btn-danger">
              <i class="bi bi-trash"></i> Delete
            </button>
          </form>
        </div>
        <%}%>

        <div class="card-footer text-center">
          <a href="/campgrounds" class="btn btn-sm btn-outline-secondary">
            ← Back to All Campgrounds
          </a>
        </div>
      </div>
      </div>

      <div class="col-md-6">
        <%if(currentUser){%>
        <form action="/campgrounds/<%=campground._id%>/reviews" class="needs-validation" method = "POST" novalidate>
            <div class="container">
            <h1 class="mb-3">Leave a Review</h1>    
            <div class="mb-3">
                <label for="rating">Rating</label>
                <input type="range" name="review[rating]" id="rating" class = 'form-range' min="1" max="5">
            </div>
            <div class="mb-3">
            <label for="body" class="form-label">Review</label>
            <textarea class = "form-control" name="review[body]" id="body" rows = '4' required></textarea>
            </div>
            <button class="mb-3 btn btn-primary">Submit</button>
            </div>
        </form>
        <%}%>

        <div class="mt-4">
        <h3>Reviews</h3>
        <% if (campground.reviews.length === 0) { %>
            <p class="text-muted">No reviews yet. Be the first to leave one!</p>
        <% } else { %>
            <div class="list-group">
            <% for (let review of campground.reviews) { %>
                <div class="list-group-item mb-2">
                <div class="mb-3 p-3 border rounded shadow-sm bg-light">
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">
                      <strong>Rating:</strong> <%= review.rating %> ⭐
                    </h5>
                    <small class="text-muted">by <%= review.author.username %></small>
                  </div>
                  <p class="mb-0"><%= review.body %></p>
                </div>
                <% if(currentUser && review.author.equals(currentUser)){%>
                <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <%}%>
                </div>
            <% } %>
            </div>
        <% } %>
        </div>
        </div>

    </div>
</div>


