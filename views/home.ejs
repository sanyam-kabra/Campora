<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Campora | Your Outdoor Escape</title>

  <style>
    /* Reset */
    * {
      margin: 0; padding: 0; box-sizing: border-box;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }
    html, body {
      height: 100%;
      overflow-x: hidden;
    }

    /* Background */
    body {
      background: url( 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1350&q=80') no-repeat center center fixed;
      background-size: cover;
      position: relative;
      color: #fff;
    }
    body::before {
      content: '';
      position: absolute; top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0,0,0,0.55);
      z-index: 0;
    }

    /* Navbar */
    nav {
      position: fixed;
      width: 100%;
      top: 0; left: 0;
      padding: 1rem 2rem;
      background: rgba(0,0,0,0.3);
      backdrop-filter: blur(6px);
      display: flex;
      justify-content: space-between;
      align-items: center;
      z-index: 20;
    }
    .logo {
      font-size: 1.8rem;
      font-weight: 900;
      letter-spacing: 2px;
      text-transform: uppercase;
      cursor: default;
      user-select: none;
      color: #58d68d;
    }

    /* Menu Items */
    ul.nav-links {
      list-style: none;
      display: flex;
      gap: 2rem;
      transition: max-height 0.3s ease;
    }
    ul.nav-links li a {
      color: #ddd;
      font-weight: 600;
      font-size: 1.1rem;
      text-decoration: none;
      position: relative;
      padding: 0.25rem 0;
    }
    ul.nav-links li a::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0%;
      height: 2px;
      background: #58d68d;
      transition: width 0.3s ease;
    }
    ul.nav-links li a:hover {
      color: #58d68d;
    }
    ul.nav-links li a:hover::after {
      width: 100%;
    }

    /* Hamburger */
    .hamburger {
      display: none;
      flex-direction: column;
      cursor: pointer;
      z-index: 25;
      width: 25px;
      height: 20px;
      justify-content: space-between;
    }
    .hamburger div {
      width: 100%;
      height: 3px;
      background: #58d68d;
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    /* Toggle animation for hamburger */
    .hamburger.active div:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    .hamburger.active div:nth-child(2) {
      opacity: 0;
    }
    .hamburger.active div:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      ul.nav-links {
        position: fixed;
        top: 60px;
        right: 0;
        background: rgba(0,0,0,0.9);
        height: calc(100vh - 60px);
        width: 200px;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        padding-top: 2rem;
        max-height: 0;
        overflow: hidden;
      }
      ul.nav-links.open {
        max-height: 100vh;
      }
      .hamburger {
        display: flex;
      }
    }

    /* Hero content */
    .hero {
      position: relative;
      z-index: 5;
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 0 1rem;
      user-select: none;
    }
    .hero h1 {
      font-size: 4.5rem;
      font-weight: 900;
      text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
      margin-bottom: 1rem;
      letter-spacing: 6px;
      text-transform: uppercase;
    }
    .hero p {
      font-size: 1.6rem;
      margin-bottom: 3rem;
      max-width: 600px;
      color: #bcd9b8dd;
      text-shadow: 1px 1px 6px rgba(0,0,0,0.6);
    }
    .hero .btn {
      background: #58d68d;
      color: #fff;
      padding: 1rem 3rem;
      font-size: 1.25rem;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      font-weight: 700;
      box-shadow: 0 4px 15px rgba(88, 214, 141, 0.6);
      transition: background 0.3s ease, transform 0.2s ease;
      text-transform: uppercase;
      letter-spacing: 1.5px;
    }
    .hero .btn:hover {
      background: #3fb568;
      transform: scale(1.05);
      box-shadow: 0 6px 20px rgba(63, 181, 104, 0.8);
    }

    @media (max-width: 480px) {
      .hero h1 {
        font-size: 2.8rem;
      }
      .hero p {
        font-size: 1rem;
        max-width: 90vw;
      }
      .hero .btn {
        padding: 0.75rem 2rem;
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>

<nav>
  <div class="logo">Campora</div>

  <ul class="nav-links" id="nav-links">
    <li><a href="/campgrounds">Campgrounds</a></li>
    <% if (currentUser) { %>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/logout">Logout</a></li>
    <% } else { %>
      <li><a href="/register">Register</a></li>
      <li><a href="/login">Login</a></li>
    <% } %>
  </ul>

  <div class="hamburger" id="hamburger" aria-label="Toggle menu" aria-expanded="false" role="button" tabindex="0">
    <div></div>
    <div></div>
    <div></div>
  </div>
</nav>

<div class="hero">
  <h1>Find Your Wild</h1>
  <p>Discover amazing campgrounds, connect with nature, and share your adventures.</p>
  <a href="/campgrounds" class="btn">Explore Now</a>
</div>

<script>
  const hamburger = document.getElementById('hamburger');
  const navLinks = document.getElementById('nav-links');

  hamburger.addEventListener('click', () => {
    const expanded = hamburger.getAttribute('aria-expanded') === 'true' || false;
    hamburger.setAttribute('aria-expanded', !expanded);
    hamburger.classList.toggle('active');
    navLinks.classList.toggle('open');
  });

  // Allow toggle with keyboard (Enter/Space)
  hamburger.addEventListener('keydown', (e) => {
    if(e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      hamburger.click();
    }
  });
</script>

</body>
</html>
